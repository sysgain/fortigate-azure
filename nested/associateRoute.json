{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "demoVnetAssociateRouteUrl":{
            "type": "string"
        },
        "workloadsSettings":{
            "type": "object"
        }
    },
    "resources": [
        {
            "apiVersion": "2016-03-30",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('workloadsSettings').virtualMachineName,'/Extensions')]",
            "location": "[parameters('workloadsSettings').location]",
            "properties": {
                "publisher": "Microsoft.Azure.Extensions",
                "type": "CustomScript",
                "typeHandlerVersion": "2.0",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[parameters('workloadsSettings').fileUri1]"
                    ],
                    "commandToExecute": "[concat('sh fg-routeenable.sh',' ',parameters('demoVnetAssociateRouteUrl'))]"
                }
            }
        }    
    ]
}
